{
  "apps": [
    {
      "name": "api",
      "script": "api.js",
      "exec_mode": "cluster",
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production",
        "API_PROTOCOL": "https",
        "API_SSL_KEY_PATH": "/home/deploy/certbot/config/live/api.lipo.io/privkey.pem",
        "API_SSL_CERT_PATH": "/home/deploy/certbot/config/live/api.lipo.io/fullchain.pem",
        "API_PORT": "8443",
        "API_TIMEOUT_MS": 30000
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "exec_mode": "cluster",
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production",
        "PROXY_PORT": "8080"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": "lipo-deploy",
      "ref": "origin/master",
      "repo": "git@github.com:lipojs/api.lipo.io.git",
      "path": "/var/www/production",
      "post-deploy":
        "yarn install --production && pm2 startOrGracefulReload ecosystem.json --env production"
    }
  }
}
