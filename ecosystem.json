{
  "apps": [
    {
      "name": "api",
      "script": "api.js",
      "exec_mode": "cluster",
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production",
        "API_PROTOCOL": "https",
        "API_SSL_KEY_PATH": "/home/deploy/.ssl/key.key",
        "API_SSL_CERT_PATH": "/home/deploy/.ssl/cert.crt",
        "API_SSL_CA_PATH": "/home/deploy/.ssl/ca.crt",
        "API_PORT": "443"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "exec_mode": "cluster",
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": "lipo-deploy",
      "ref": "origin/master",
      "repo": "git@github.com:lipojs/api.lipo.io.git",
      "path": "/var/www/production",
      "post-deploy":
        "yarn && pm2 startOrGracefulReload ecosystem.json --env production"
    }
  }
}
