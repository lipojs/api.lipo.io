{
  "name": "api-lipo-io",
  "private": true,
  "description": "Lipo API service",
  "version": "0.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "bugs": {
    "url": "https://github.com/lipojs/api.lipo.io/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "@ladjs/api": "0.2.0",
    "@ladjs/graceful": "^0.0.1",
    "@ladjs/logger": "^0.1.0",
    "@ladjs/proxy": "^0.0.1",
    "bytes": "^3.1.0",
    "koa-multer": "https://github.com/niftylettuce/multer",
    "koa-router": "^7.4.0",
    "lipo-koa": "0.0.3",
    "max-listeners-exceeded-warning": "^0.0.1",
    "multer": "2.0.0-alpha.6"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "ava": "^1.4.1",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-xo-lass": "^1.0.3",
    "fixpack": "^2.3.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "nyc": "^14.1.1",
    "remark-cli": "^6.0.1",
    "remark-preset-github": "^0.0.13",
    "xo": "^0.24.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/lipojs/api.lipo.io",
  "keywords": [
    "api",
    "lipo",
    "image",
    "sharp",
    "koa",
    "server",
    "image",
    "resize",
    "trim",
    "crop",
    "optimize",
    "enhance",
    "sharp",
    "autocrop",
    "jimp",
    "im",
    "imagemagick",
    "imagemagic",
    "graphicsmagick",
    "graphics",
    "gm",
    "graphic",
    "magic",
    "magick",
    "gulp",
    "grunt"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lipojs/api.lipo.io"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ]
  }
}
